{
  "name": "Show Download Status",
  "version": "v1.2",
  "author": "Tormak#6639",
  "description": "This theme adds an icon to the library and homepage view indicating if a game is installed or not.",
  "manifest_version": 5,
  "inject": {},
  "patches": {
    "Small Icons": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {
          "varients/small.css": [ "SP", "MainMenu", "QuickAccess" ]
        },
        "No": {
          "varients/original.css": [ "SP", "MainMenu", "QuickAccess" ]
        }
      }
    }
  }
}