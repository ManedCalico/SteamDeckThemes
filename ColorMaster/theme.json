{
  "name": "Color Master",
  "description": "Full control over your Steam Client",
  "author": "Tormak",
  "version": "v1.0.0",
  "manifest_version": 7,
  "target": "Desktop",
  "inject": {
    "shared/index.css": [ ".*" ],
    "shared/tooltips.css": [
      "SteamLibraryWindow|Steam",
      "Special Offer.*",
      "https://store.steampowered.com/marketingmessages.*"
    ],
    "shared/navbar.css": [ "SteamLibraryWindow|Steam" ],
    "shared/nav-menu.css": [
      "SteamLibraryWindow|Steam",
      ".*Supernav",
      ".*Root .*",
      "Notifications Menu",
      "Account Menu",
      "Menu"
    ],
    "shared/interactables.css": [
      "SteamLibraryWindow|Steam",
      "Special Offer.*",
      "https://store.steampowered.com/marketingmessages.*"
    ]
  },
  "dependencies": {
    "Desktop Colored Toggles": {}
  },
  "patches": {
    "Library Tab": {
      "type": "checkbox",
      "values": {
        "Yes": {
          "library-tab/index.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/games-list.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/game-shelf.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/game-page.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/collections.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/soundtrack.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/footer.css": [ "SteamLibraryWindow|Steam" ]
        },
        "No": {}
      }
    },
    "Store Tab": {
      "type": "checkbox",
      "values": {
        "Yes": {
          "store-tab/index.css": [ "SteamLibraryWindow|Steam" ]
        },
        "No": {}
      }
    },
    "Community Tab": {
      "type": "checkbox",
      "values": {
        "Yes": {
          "community-tab/index.css": [ "SteamLibraryWindow|Steam" ]
        },
        "No": {}
      }
    },
    "Secondary Windows": {
      "type": "checkbox",
      "values": {
        "Yes": {
          "secondary-windows/special-offers.css": [
            "Special Offer.*",
            "https://store.steampowered.com/marketingmessages.*"
          ],
          "secondary-windows/game-properties.css": [],
          "secondary-windows/remove-from-lib.css": [],
          "secondary-windows/logout.css": [],
          "secondary-windows/settings.css": [],
          "secondary-windows/notes.css": [],
          "secondary-windows/screenshots.css": [],
          "secondary-windows/change-nickname.css": []
        },
        "No": {}
      }
    }
  }
}