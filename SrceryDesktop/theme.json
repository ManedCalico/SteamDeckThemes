{
  "name": "Srcery Desktop",
  "description": "A color scheme for your Steam desktop app. See more at https://srcery.sh",
  "author": "Tormak",
  "version": "v1.0.0",
  "manifest_version": 4,
  "target": "System-Wide",
  "inject": {
    "shared/index.css": [
      "SteamLibraryWindow|Steam",
      "Special Offer.*",
      "https://store.steampowered.com/marketingmessages.*",
      "Store Supernav",
      "Library Supernav",
      "Community Supernav",
      "Profile Supernav",
      "Help Root .*",
      "Friends Root .*",
      "View Root .*",
      "Games Root .*",
      "Steam Root .*",
      "Notifications Menu",
      "Account Menu"
    ],
    "shared/tooltips.css": [
      "SteamLibraryWindow|Steam",
      "Special Offer.*",
      "https://store.steampowered.com/marketingmessages.*"
    ],
    "shared/navbar.css": [ "SteamLibraryWindow|Steam" ],
    "shared/nav-menu.css": [
      "Store Supernav",
      "Library Supernav",
      "Community Supernav",
      "Profile Supernav",
      "Help Root .*",
      "Friends Root .*",
      "View Root .*",
      "Games Root .*",
      "Steam Root .*",
      "Notifications Menu",
      "Account Menu"
    ],
    "shared/interactables.css": [
      "SteamLibraryWindow|Steam",
      "Special Offer.*",
      "https://store.steampowered.com/marketingmessages.*"
    ]
  },
  "dependencies": {
    "Desktop Colored Toggles": {}
  },
  "patches": {
    "Library Tab": {
      "type": "checkbox",
      "values": {
        "Yes": {
          "library-tab/index.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/game-shelf.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/game-page.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/collections.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/games-list.css": [ "SteamLibraryWindow|Steam" ],
          "library-tab/footer.css": [ "SteamLibraryWindow|Steam" ]
        },
        "No": {}
      }
    },
    "Store Tab": {
      "type": "checkbox",
      "values": {
        "Yes": {
          "store-tab/index.css": [ "SteamLibraryWindow|Steam" ]
        },
        "No": {}
      }
    },
    "Community Tab": {
      "type": "checkbox",
      "values": {
        "Yes": {
          "community-tab/index.css": [ "SteamLibraryWindow|Steam" ]
        },
        "No": {}
      }
    },
    "Secondary Windows": {
      "type": "checkbox",
      "values": {
        "Yes": {
          "secondary-windows/special-offers.css": [
            "Special Offer.*",
            "https://store.steampowered.com/marketingmessages.*"
          ]
        },
        "No": {}
      }
    },
    "Font": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {
          "font.css": [ "SteamLibraryWindow|Steam" ]
        },
        "No": {}
      }
    }
  }
}