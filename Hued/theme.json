{
  "name": "Hued",
  "version": "v1.0.0",
  "author": "Tormak",
  "target": "System-wide",
  "description": "Adds a hue to the entire steam deck UI.",
  "manifest_version": 3,
  "inject": {
    "shared.css": [
      "QuickAccess",
      "SP",
      "MainMenu"
    ]
  },
  "patches": {
    "Keyboard": {
      "type": "checkbox",
      "default": "Yes",
      "values": {
        "Yes": {},
        "No": {}
      },
      "components": [
        {
          "name": "Background",
          "type": "color-picker",
          "on": "Yes",
          "default": "#23262E",
          "css_variable": "HUED-color-fg",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        }
      ]
    }
  }
}