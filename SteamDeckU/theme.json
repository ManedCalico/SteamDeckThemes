{
    "name": "SteamDeck U",
    "version": "v1.0.0",
    "author": "Tormak",
    "target": "System-Wide",
    "description": "This theme gives you full control over the colors of your steamdeck's keyboard and inputs! Colored inputs based of SuchMemeManySkill's Colored Toggles",
    "manifest_version": 2,
    "inject": {
        "color-toggles.css": [ "QuickAccess", "SP", "MainMenu" ],
        "shared.css": [ "QuickAccess", "SP", "MainMenu" ]
    },
    "patches": {
        "Main UI": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {},
                "No": {}
            },
            "components": [
                {
                    "name": "Accent Color",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#82b74b",
                    "css_variable": "test-main-color",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                }
            ]
        },
        "Keyboard": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {},
                "No": {}
            },
            "components": [
                {
                    "name": "Background",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#23262E",
                    "css_variable": "keyboard-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                }
            ]
        },
        "Keys": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {},
                "No": {}
            },
            "components": [
                {
                    "name": "Background",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#0e141b",
                    "css_variable": "bkey-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Color",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#ffffff",
                    "css_variable": "bkey-color",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Selected Background",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#ffffff",
                    "css_variable": "selected-bkey-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Selected Color",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#0e141b",
                    "css_variable": "selected-bkey-color",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                }
            ]
        },
        "Function Keys": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {},
                "No": {}
            },
            "components": [
                {
                    "name": "Background",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#000000",
                    "css_variable": "ext-key-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Color",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#ffffff",
                    "css_variable": "ext-key-color",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Selected Background",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#ffffff",
                    "css_variable": "selected-ext-key-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Selected Color",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#000000",
                    "css_variable": "selected-ext-key-color",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                }
            ]
        },
        "Toggled Keys": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {},
                "No": {}
            },
            "components": [
                {
                    "name": "Color",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#000000",
                    "css_variable": "key-toggle-color",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Background",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#1a9fff",
                    "css_variable": "key-toggle-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Selected Emoji Category BG",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#3D4450",
                    "css_variable": "selected-emoji-cat-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Emoji Hover BG",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#8b929a",
                    "css_variable": "emoji-focused-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                }
            ]
        },
        "Icon Keys": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {},
                "No": {}
            },
            "components": [
                {
                    "name": "Color",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#ffffff",
                    "css_variable": "glif-color",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Selected Color",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#0e141b",
                    "css_variable": "selected-glif-color",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                }
            ]
        },
        "Emoji keys": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {},
                "No": {}
            },
            "components": [
                {
                    "name": "Category Background",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#3D4450",
                    "css_variable": "selected-emoji-cat-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                },
                {
                    "name": "Hover Background",
                    "type": "color-picker",
                    "on": "Yes",
                    "default": "#8b929a",
                    "css_variable": "emoji-focused-bg",
                    "tabs": ["QuickAccess", "SP", "MainMenu"]
                }
            ]
        }
    }
}